# Required Environment Variables
DATABASE_POSTGRES_URL=postgresql://user:password@localhost:5432/cleanbuddy
AUTH_JWT_SECRET=your-jwt-secret-here
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_SECRET=
AUTH_GOOGLE_REDIRECT_URL=postmessage
PORT=8080
ENVIRONMENT=development

# Optional: Global Admin Bootstrap
# Set this to automatically promote a user to global admin on startup
GLOBAL_ADMIN_EMAIL=

# Optional: Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000

# Optional: Email Service (Sidemail)
SIDEMAIL_API_KEY=
SIDEMAIL_API_URL=https://api.sidemail.io/v1
SIDEMAIL_SIGNUPS_GROUP_ID=

# Optional: Notifications (Slack)
SLACK_WEBHOOK_URL=
SLACK_TIMEOUT_SECONDS=5

# Google Cloud Storage (for document uploads)
GCS_BUCKET_NAME=cleanbuddy-documents
GCS_PROJECT_ID=
# For local development: use file path
GOOGLE_APPLICATION_CREDENTIALS=gcs-credentials.json
# For Vercel/serverless: use JSON string (copy entire contents of credentials file)
GOOGLE_APPLICATION_CREDENTIALS_JSON=
